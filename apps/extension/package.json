{
  "name": "@palladco/extension",
  "version": "0.7.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bunx --bun tsc --noEmit && bun run build:rpc && bunx --bun vite build",
    "build:rpc": "bunx --bun tsup",
    "build:firefox": "web-ext build --source-dir=dist",
    "build:safari": "xcrun safari-web-extension-converter dist --app-name Pallad --bundle-identifier co.pallad.app --swift --no-prompt --force --macos-only --no-open",
    "preview": "bunx --bun vite preview",
    "cleanup": "rimraf node_modules dist .turbo",
    "test:e2e": "playwright test",
    "test:e2e:install": "npx playwright install --with-deps chromium",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@mina-js/providers": "0.1.0",
    "@palladco/common": "workspace:*",
    "@palladco/features": "workspace:*",
    "@palladco/key-management": "workspace:*",
    "@palladco/vault": "workspace:*",
    "@palladco/web-provider": "workspace:*",
    "@plasmohq/messaging": "0.6.2",
    "buffer": "6.0.3",
    "mina-attestations": "^0.3.6",
    "mitt": "3.0.1",
    "next-themes": "0.3.0",
    "o1js": "https://pkg.pr.new/o1-labs/o1js@1dc90e4",
    "p-debounce": "4.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "serialize-error": "11.0.3",
    "ts-pattern": "^5.5.0",
    "webext-bridge": "6.0.1",
    "webextension-polyfill": "0.12.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "1.45.3",
    "@total-typescript/ts-reset": "0.5.1",
    "@tsconfig/vite-react": "3.0.2",
    "@types/chrome": "0.0.269",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/webextension-polyfill": "0.10.7",
    "@vitejs/plugin-react-swc": "3.7.0",
    "vite": "5.3.5",
    "vite-plugin-node-polyfills": "0.17.0",
    "vite-plugin-svgr": "4.2.0",
    "vite-plugin-web-extension": "4.1.6",
    "web-ext": "8.2.0"
  }
}
