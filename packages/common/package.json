{
  "name": "@palladco/common",
  "description": "The proto package for shareable common configuration.",
  "version": "1.0.0",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["tsconfig.json", "dist/index.js", "dist/index.d.ts"],
  "exports": {
    "./tsconfig.json": {
      "import": "./tsconfig.json",
      "require": "./tsconfig.json"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bunx --bun tsc --noEmit && bunx --bun tsup src/index.ts --dts --format esm --silent",
    "cleanup": "bunx --bun rimraf node_modules dist .turbo"
  }
}
