{
  "name": "@palladxyz/mina-core",
  "version": "0.0.1",
  "type": "module",
  "description": "Core Mina Package SDK for Pallad",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bunx --bun tsc --noEmit && bunx --bun tsup",
    "dev": "bunx --bun tsup --watch",
    "cleanup": "bunx --bun rimraf node_modules dist .turbo"
  },
  "dependencies": {
    "@palladxyz/util": "workspace:*",
    "bs58check": "4.0.0",
    "buffer": "6.0.3",
    "mina-signer": "3.0.7"
  },
  "devDependencies": {
    "@palladxyz/common": "workspace:*",
    "@types/secp256k1": "4.0.6"
  }
}
